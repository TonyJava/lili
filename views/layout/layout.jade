!!!5
html
  head
    meta(charset="utf-8")
    title #{title}
    if user && user.cat ===3
      link(rel="stylesheet",href="/css/admin.css")
    else
      link(rel="stylesheet",href="/css/style.css")
    body
      if user
        .container.clearfix
          include header
          #main.clearfix
            .content
              block content
            if user.cat === 1
              include sidebar
            else if user.cat === 3
              include sidebar_admin
            else
              include sidebar_teach
          if user.cat !== 3
            block link
      else
        block content
      include footer

